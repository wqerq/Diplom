<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Diplom.Views.SessionPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Назад" Command="{Binding CancelCommand}" />
    </ContentPage.ToolbarItems>

    <Grid Padding="24" RowSpacing="20"
          RowDefinitions="Auto,*">
        <Grid ColumnDefinitions="*,Auto">
            <Label Text="{Binding CurrentTask.Description}" FontSize="20"/>
            <Label Text="{Binding Progress}" FontSize="16" TextColor="Gray"
                   Grid.Column="1"/>
        </Grid>

        <ContentView x:Name="TaskHost" Grid.Row="1"/>
    </Grid>
</ContentPage>
