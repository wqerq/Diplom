<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diplom.Views.TaskViews.AudioTaskView">

    <VerticalStackLayout Padding="20" Spacing="24">
        <Label Text="{Binding Task.Description}"
               FontAttributes="Bold"
               FontSize="20"/>

        <Button Text="▶︎ Озвучить"
                x:Name="SpeakButton"
                Clicked="OnSpeakClicked"
                HorizontalOptions="Center"/>

        <Label x:Name="DoneLabel"
               IsVisible="False"
               Text="Прослушано"
               HorizontalOptions="Center"
               TextColor="Green" />
        
        <Button Text="Ответить"
                    IsEnabled="{Binding IsCompleted}"
                    Clicked="OnContinue"/>
    </VerticalStackLayout>
</ContentView>
