<?xml version="1.0" encoding="utf-8"?>
<ContentView
    x:Class="Diplom.Views.TaskViews.SentenceCompleteView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">

    <Grid>
        <VerticalStackLayout Spacing="16">
            <Label Text="{Binding Description}" FontSize="20"
                   HorizontalOptions="Center"/>

            <Button Text="{Binding Opt1}" Clicked="OnPick"/>
            <Button Text="{Binding Opt2}" Clicked="OnPick"/>
            <Button Text="{Binding Opt3}" Clicked="OnPick"/>

            <Button Text="Ответить"
                    IsEnabled="{Binding IsCompleted, Source={x:Reference Root}}"
                    Clicked="OnAnswer"/>
        </VerticalStackLayout>

        <Grid x:Name="Overlay" IsVisible="False" BackgroundColor="#80000080">
            <Frame BackgroundColor="White" CornerRadius="20" Padding="24"
                   HorizontalOptions="Center" VerticalOptions="Center">
                <VerticalStackLayout Spacing="16">
                    <Label x:Name="ResultText" FontSize="20" FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Button Text="Дальше" Clicked="OnContinue"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentView>
